<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <ImageView
            android:id="@+id/itemImage"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="#07000000"
            android:scaleType="centerCrop" />

        <androidx.core.widget.ContentLoadingProgressBar
            android:id="@+id/progress_bar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/itemImage"
            android:layout_alignParentLeft="true" />

        <Button
            android:id="@+id/itemChooseImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/progress_bar"
            android:backgroundTint="@color/colorAccent"
            android:text="@string/choose_image"
            android:textColor="@color/textColorPrimary" />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/snipper_bar"
            android:layout_below="@id/itemChooseImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Spinner
                android:id="@+id/privacy_spinner"
                android:layout_width="383dp"
                android:layout_height="43dp"
                android:layout_below="@id/itemChooseImage"
                android:spinnerMode="dropdown"
                android:visibility="visible" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/itemName"
            android:layout_below="@id/snipper_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/item_name_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/type_item_name"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/itemDescription"
            android:layout_below="@id/itemName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/item_description_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/type_item_description"
                android:inputType="textMultiLine" />
        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:id="@+id/text_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/itemDescription"
            android:gravity="center"
            android:text="Please choose a date"
            android:textSize="24dp" />
        <Button
            android:id="@+id/addItemConfirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_date"
            android:backgroundTint="@color/colorAccent"
            android:text="@string/add_item"
            android:textColor="@color/textColorPrimary" />
    </RelativeLayout>

</LinearLayout>